<body>
  <div class="date">{{date}}</div>
  <div class="logo"><img height="100px" width="100px" src="./logo.png"/></div>
  <div class="title">
<h2 >{{schoolName}}</h2>
<p>{{schoolAddress}}</p>
  </div>
  <div class="examination">
    <strong>{{examTitle}}-{{examYear}}</strong>
  </div>

<div class="information">
<span><strong>Student:</strong>{{studentName}}</span>
<span><strong>Class:</strong> {{class}}</span>
<span><strong>Roll no:</strong> {{rollNumber}}</span>
<span><strong>Section:</strong> {{section}}</span>
</div>

  <u class="gradesheet-title"><h4>Grade Sheet</h4>  </u>
<table class="gradesheet-table"  border="1" cellpadding="5" cellspacing="0" width="100%">
