    </tr>
     <tr>
        <td>3</td>
        <td>English</td>
        <td>100</td>
        <td>40</td>
        <td>75</td>
        <td>Pass</td>
    </tr>
     <tr>
        <td>4</td>
        <td>Science</td>
        <td>100</td>
        <td>40</td>
        <td>75</td>
        <td>Pass</td>
    </tr>
     <tr>
        <td>5</td>
        <td>Social Studies</td>
        <td>100</td>
        <td>40</td>
        <td>75</td>
        <td>Pass</td>
    </tr>
